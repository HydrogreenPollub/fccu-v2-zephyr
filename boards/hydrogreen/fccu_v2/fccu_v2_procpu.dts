/dts-v1/;

#include <espressif/esp32s3/esp32s3_wroom_n8.dtsi>
#include "fccu_v2-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <espressif/partitions_0x0_amp.dtsi>


/ {
	model = "Hydrogreen FCCU-V2 board";
	compatible = "hydrogreen,fccu_v2";

	aliases {
		i2c-0 = &i2c0;
		watchdog0 = &wdt0;
		uart-0 = &uart0;
		button-start = &button_start0;
		can = &twai;
		fan-pin = &fan0;
		fan-pwm = &fan_pwm0;
		main-valve-pin = &main_valve0;
		purge-valve-pin = &purge_valve0;
		adc-1 = &adc0;
		can-led = &can_led0;
	};

	chosen {
		zephyr,sram = &sram1;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,bt-hci = &esp32_bt_hci;
		zephyr,canbus = &twai;
	};

	buttons {
		compatible = "gpio-keys";
		button_start0: button_start_0 {
			gpios = <&gpio0 1 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "start button";
			zephyr,code = <INPUT_KEY_1>;
		};
	};

	can_status_led{
		compatible = "gpio-leds";
		can_led0:can_led_0{
			gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
		};
	};
	fan_on{
		compatible = "gpio-leds";
		fan0:fan_0{
			label = "fan on pin";
			gpios = <&gpio1 38 GPIO_ACTIVE_HIGH>;
		};
	};
	main_valve_on{
		compatible = "gpio-leds";
		main_valve0:main_valve_0{
			label = "main valve on pin";
			gpios = <&gpio1 46 GPIO_ACTIVE_HIGH>;
		};
	};

	purge_valve_on{
		compatible = "gpio-leds";
		purge_valve0:purge_valve_0{
			label = "purge valve on pin";
			gpios = <&gpio1 45 GPIO_ACTIVE_HIGH>;
		};
	};


	zephyr,user {
		io-channels = <&adc0 6>, <&adc0 7>, <&adc0 8>, <&adc0 9>, <&ads1015 0>, <&ads1015 1>, <&ads1015 2>,<&ads1015 3>;
	};

	pwm_leds{
		compatible = "pwm-leds";
		fan_pwm0:pwm_pwm_0{
			pwms = <&ledc0 0 40000 0>;
		};
	};

};

&usb_serial {
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&i2c0 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
	status = "okay";


	bme280@76 {
		compatible = "bosch,bme280";
		reg = <0x76>;
		status = "okay";
	};

	ads1015:ads1015@48 {
		compatible = "ti,ads1015";
		reg = <0x48>;
		label = "ADS1015";
		#io-channel-cells = <1>;
		#address-cells = <1>;
		#size-cells = <0>;
		status = "okay";
	};
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
};

&i2s0 {
	pinctrl-0 = <&i2s0_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&i2s1 {
	pinctrl-0 = <&i2s1_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&spi2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim2_default>;
	pinctrl-names = "default";
};

&twai {
	pinctrl-0 = <&twai_default>;
	pinctrl-names = "default";
	status = "okay";
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "disabled";
};

&timer2 {
	status = "disabled";
};

&timer3 {
	status = "disabled";
};

&wdt0 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&esp32_bt_hci {
	status = "okay";
};

&wifi {
	status = "okay";
};

&adc0{
	status = "okay";
	unit = <1>;
	#io-channel-cells = <1>;
	#address-cells = <1>;
	#size-cells = <0>;
	channel-count = <10>;

	channel@6 {
		reg = <6>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
	channel@7 {
		reg = <7>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
	channel@8 {
		reg = <8>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
	channel@9 {
		reg = <9>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
};

